@keyframes around {
  from {
   margin-left: 100%;
  }
  to {
   margin-left: var(--marqueeWidth);
  }
 }
 
.marquee_container{
  background-color: rgba(207, 204, 24, 0.705);
  height: 50rpx;
  line-height: 44rpx;
  position: absolute;
  width: 100%;
  margin-top:-30rpx;
  z-index: 1;
}
.marquee_container:hover{
  animation-play-state: paused;
}
.marquee_text{
  color:#fff;
  font-size: 28rpx;
  display: inline-block;
  white-space: nowrap;
  animation-name: around;
  animation-duration: 20s;  /*过渡时间*/
  animation-iteration-count: infinite;
  animation-timing-function:linear;
}
