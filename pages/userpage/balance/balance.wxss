/* pages/restMoney/restMoney.wxss */
page{
  background: #ededed
}
.restMoney{
  width: 100%;
  height: 260rpx;
  background: #29304721;
  margin: 16rpx 0;
  display: flex;
  justify-content: space-between
}
.yue{
  width: 320rpx;
  height: 98rpx;
  margin: 80rpx 0 0 56rpx;
}
.describe{
  font-size: 50rpx;
  color: #111105fa;
  line-height: 36rpx;
}
.num{
  font-size: 46rpx;
  line-height: 46rpx;
  font-weight: bold;
  color:#140404;
  margin-top: 26rpx;
}
.transferin{
  width: 180rpx;
  height: 60rpx;
  background: #82ccd6ee;
  border-radius: 36rpx;
  border: 2rpx solid #ffffff;
  font-size: 32rpx;
  line-height: 52rpx;
  text-align: center;
  color: #ffffff;
  margin:102rpx 55rpx 0 0;
}
.transferout{
  width: 180rpx;
  height: 60rpx;
  background: red;
  border-radius: 36rpx;
  border: 2rpx solid #ffffff;
  font-size: 32rpx;
  line-height: 52rpx;
  text-align: center;
  color: #ffffff;
  margin:102rpx 55rpx 0 0;
}
.swiper-tab{
  width: 100%;  
  border-bottom:2rpx solid #ededed;
  text-align: center;  
  line-height: 88rpx;
  height: 88rpx;
  background: #ffffff;
  display: flex;
  justify-content: space-between
} 
.show{
  display: block
}
.hidden{
  display: none
}
.tab-item{  
    display: block;  
    font-size: 36rpx;
    /* font-weight: bold; */
    width: 50%;  
    color: #999999;  
}  

