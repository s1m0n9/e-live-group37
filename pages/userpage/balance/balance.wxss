.recharge{
  width: 100%;
  height: auto;
  background: #ffffff;
}
.record{
  width: 100%;
  height: 132rpx;
  background: #ffffff;
  border-bottom:2rpx solid #ededed;
  display: flex;
  justify-content: space-between;
}
.list{
  width: 80%;
  height: 70rpx;
  margin:28rpx 0 0 22rpx
}
.word{
  font-size: 32rpx;
  font-weight: bold;
  color:#333333;
  line-height: 32rpx;
}
.time{
  font-size: 36rpx;
  color: #999999;
  line-height: 20rpx;
  margin-top: 22rpx;
}
.money{
  width: 200rpx;
  height: 30rpx;
  line-height: 20rpx;
  color: #9f9f9f;
  font-size: 30rpx;
  margin-top: 56rpx;
  text-align: right;
  margin-right: 24rpx;
}

